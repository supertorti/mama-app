{
  "info": {
    "name": "Mama App API",
    "description": "Family Task Management API with PIN-based JWT authentication",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "adminToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "childToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "childId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "PIN Check (Admin)",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.success) {",
                  "    pm.collectionVariables.set('adminToken', jsonData.token);",
                  "    pm.test('Admin token saved', function () {",
                  "        pm.expect(jsonData.role).to.eql('admin');",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"pin\": \"1234\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/pin/check",
              "host": ["{{baseUrl}}"],
              "path": ["api", "pin", "check"]
            }
          }
        },
        {
          "name": "PIN Check (Child)",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.success) {",
                  "    pm.collectionVariables.set('childToken', jsonData.token);",
                  "    pm.collectionVariables.set('childId', jsonData.childId.toString());",
                  "    pm.test('Child token saved', function () {",
                  "        pm.expect(jsonData.role).to.eql('child');",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"pin\": \"0000\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/pin/check",
              "host": ["{{baseUrl}}"],
              "path": ["api", "pin", "check"]
            }
          }
        },
        {
          "name": "PIN Check (Invalid)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"pin\": \"9999\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/pin/check",
              "host": ["{{baseUrl}}"],
              "path": ["api", "pin", "check"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin Endpoints",
      "item": [
        {
          "name": "Get All Children",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/children",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "children"]
            }
          }
        },
        {
          "name": "Get All Tasks",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/tasks",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "tasks"]
            }
          }
        },
        {
          "name": "Create Task",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"childId\": 2,\n  \"title\": \"Zimmer aufr√§umen\",\n  \"description\": \"Staubsaugen und Bett machen\",\n  \"points\": 3,\n  \"dueDate\": \"2026-02-10T15:00:00+01:00\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/admin/tasks",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "tasks"]
            }
          }
        }
      ]
    },
    {
      "name": "Child Endpoints",
      "item": [
        {
          "name": "Get My Tasks",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{childToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/child/{{childId}}/tasks",
              "host": ["{{baseUrl}}"],
              "path": ["api", "child", "{{childId}}", "tasks"]
            }
          }
        },
        {
          "name": "Complete Task",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{childToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"pin\": \"0000\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/child/tasks/1/complete",
              "host": ["{{baseUrl}}"],
              "path": ["api", "child", "tasks", "1", "complete"]
            }
          }
        },
        {
          "name": "Get My Points",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{childToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/child/{{childId}}/points",
              "host": ["{{baseUrl}}"],
              "path": ["api", "child", "{{childId}}", "points"]
            }
          }
        }
      ]
    }
  ]
}
